{
  "name": "cypress_e2e_framework",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "open:mode": "npx cypress open",
    "headless:mode": "npx cypress run",
    "cy:chrome": "npm run allure:clear && npx cypress run --browser chrome",
    "cy:edge": "npx cypress run --browser edge",
    "cy:firefox": "npx cypress run --browser firefox",
    "cy:cross:browser": "npm-run-all --continue-on-error cy:chrome cy:edge cy:firefox",
    "cy:single:spec": "npm run allure:clear && npx cypress run --browser chrome --spec 'cypress/e2e/login.cy.js'",
    "cy:chrome:parallel": "npx cypress-parallel -s cy:chrome -t 4 -d \"cypress/e2e/*.cy.js\"",
    "cy:run:testData2": "npx cypress run --env testDataFile=testData2",
    "allure:report": "allure generate allure-results --clean -o allure-report",
    "allure:clear": "rimraf allure-results/ allure-report cypress/screenshots || true"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@shelex/cypress-allure-plugin": "^2.41.2",
    "allure-commandline": "^2.34.1",
    "cypress": "^13.7.3",
    "cypress-parallel": "^0.15.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1"
  }
}
